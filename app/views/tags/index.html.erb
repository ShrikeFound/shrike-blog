<div class="container">
<h1>Tags</h1>
  <% @tags.each do |tag|%>
    <h3><%= tag.name %></h3>
  <div class="row">

    <ul>
      <% tag.posts.each do |post|%>
        <li>
        <%= link_to post.title, post_path(post)%>
        <% if current_user && current_user.admin%>
          <%= link_to "Delete Tag", tag_path(tag), method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <% end %>

</div>