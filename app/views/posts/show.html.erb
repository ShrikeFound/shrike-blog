<div style="width: 100%; max-height: 300px; overflow-y:hidden;">
  <%= image_tag(@post.banner, style:'width:100%')%>
</div>

<div class="container" style="margin-top: 2em;">
  <div class="row">
    <div class=""style="width: 100%;">
      <h1 class="display-4" >
        <%= link_to @post.title, root_path%>
      </h1>
      <p class="lead">
        <%= @post.updated_at.strftime("%A, %m/%e/%y")%> by <%= @post.user.user_name%> | <%= pluralize(@post.views, "View")%>
      </p>
      <hr class="my-h">
      <div class="post_body">
        <%= @post.body%>
      </div>
    </div>
  </div>
</div>